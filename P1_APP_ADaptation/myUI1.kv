            MDScreen:
                id:screenviedo
                name:'Video To Images'
                MDFillRoundFlatButton:
                    text: "   Load File video    "
                    pos_hint:{'center_x':.5 ,'center_y':.9 }
                    spacing:dp(115)
                    on_release:app.open_file_manager()
                MDFillRoundFlatButton:
                    text: "   convert    "
                    pos_hint:{'center_x':.5 ,'center_y':.25 }
                    spacing:dp(115)
                    on_press: app.lanceconvertvideotoimages()
                MDFillRoundFlatButton:
                    text: "   Open Folder Images    "
                    pos_hint:{'center_x':.5 ,'center_y':.15 }
                    spacing:dp(115)
                    on_press: app.open_file_manager_myfolder()
    Screen:
        name : "screen5"
        MDBoxLayout:
            orientation:'vertical'
            md_bg_color:56/255,40/255,81/255,1
